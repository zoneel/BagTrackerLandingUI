<Window x:Class="RocketUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RocketUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" WindowStyle="None" ResizeMode="NoResize" Background="#26272C" >
    
    <Grid>
        <Grid.RowDefinitions> <!--Creates this upper menu nav bar -->
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions> <!--Creates column that splits main window in two parts-->
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#18181b" Grid.ColumnSpan="2" MouseDown="Grid_MouseDown"> <!--Filling nav bar with content-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="START" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFD0DDD7" FontFamily="Fonts/#Tilt Neon" FontSize="25" FontWeight="Medium" Grid.ColumnSpan="2"/>
            <TextBlock Text="MENU" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFD0DDD7" FontFamily="Fonts/#Tilt Neon" FontSize="25" FontWeight="Medium" Grid.ColumnSpan="2" Margin="0,0,15,0"/>
            <TextBlock Text="JOIN" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#FFD0DDD7" FontFamily="Fonts/#Tilt Neon" FontSize="25" FontWeight="Medium" Grid.ColumnSpan="3" Margin="20,0,0,0"/>

            <Button Content="--"  
                        Foreground="#FFD0DDD7" 
                        FontWeight="Medium"
                        Margin="0,0,0,0"
                        Grid.Column="12"
                        FontSize="17">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Tilt Neon"/>
                        <Setter Property="Background" Value="#FF157F1F"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#11691A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="40" 
                                    Height="25" 
                                    CornerRadius="8" 
                                    Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
            <Button Content="▢"  
                        Foreground="#FFD0DDD7" 
                        FontWeight="ExtraBold"
                        Margin="0,0,0,0"
                        Grid.Column="13"
                        FontSize="16">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Tilt Neon"/>
                        <Setter Property="Background" Value="#3689FC"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0E71FB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="40" 
                                    Height="25" 
                                    CornerRadius="8" 
                                    Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
            <Button Content="X"  
                        Foreground="#FFD0DDD7" 
                        FontWeight="Medium"
                        Margin="0,0,0,0"
                        Grid.Column="14"
                        FontSize="16"
                        >

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Tilt Neon"/>
                        <Setter Property="Background" Value="#FF9C0008"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF800007"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="40" 
                                    Height="25" 
                                    CornerRadius="8" 
                                    Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
        </Grid>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    Margin="30,0,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Width="100" Height="100" Source="Images/bag.png" RenderOptions.BitmapScalingMode="Fant"/>
                    <TextBlock Text="BAG TRACKER" FontSize="45" FontWeight="Medium" FontFamily="Fonts/#Tilt Neon" VerticalAlignment="Center" Foreground="#FFD0DDD7" Margin="10,0,0,0"/>
                </StackPanel>

                <TextBlock Text="The ultimate tool for serious sneaker resellers" FontSize="23" FontWeight="Medium" FontFamily="Fonts/#Tilt Neon" Foreground="#FFD0DDD7" Margin="0,25,0,0"/>
                <TextBlock Text="Introducing the ultimate solution for sneaker resellers: our cutting-edge software that enables you to effortlessly track your spending and earnings with professional-grade accuracy.." 
                       FontSize="14" 
                       FontWeight="Medium" 
                       FontFamily="Fonts/#Tilt Neon" 
                       Foreground="#FFD0DDD7"
                       TextWrapping="Wrap" Margin="0,19,0,0"/>
                <TextBlock Text="No more guesswork or manual calculations – our innovative platform will help you take control of your finances and maximize your profits." 
                       FontSize="14" 
                       FontWeight="Medium" 
                       FontFamily="Fonts/#Tilt Neon" 
                       Foreground="#FFD0DDD7"
                       TextWrapping="Wrap" Margin="0,19,0,0"/>
                <TextBlock Text="With advanced analytics and customizable reporting, you can make informed business decisions and stay ahead of the competition. Elevate your reselling game with our software." 
                       FontSize="14" 
                       FontWeight="Medium" 
                       FontFamily="Fonts/#Tilt Neon" 
                       Foreground="#FFD0DDD7"
                       TextWrapping="Wrap" Margin="0,19,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,40,0,0">
                <Button Content="JOIN US"  
                        Foreground="#FFD0DDD7" 
                        FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,10,0">
                    
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Tilt Neon"/>
                            <Setter Property="Background" Value="#FF157F1F"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="22"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#11691A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" 
                                    Height="50" 
                                    CornerRadius="19" 
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  />

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <Button Content="LOGIN" 
                        Foreground="#FFD0DDD7" 
                        FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,10,0">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Tilt Neon"/>
                            <Setter Property="Background" Value="#555862"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="22"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#474a52"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" 
                                    Height="50" 
                                    CornerRadius="19" 
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <Button Content="LEARN MORE" 
                        Foreground="#FFD0DDD7" 
                        FontWeight="Medium">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Tilt Neon"/>
                            <Setter Property="Background" Value="#555862"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="22"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#474a52"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" 
                                    Height="50" 
                                    CornerRadius="19" 
                                    Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1"
              Grid.RowSpan="2"
              Margin="160,-365,-610, 85"
              Panel.ZIndex="-1">

            <Grid.RenderTransform>
                <RotateTransform Angle="50"/>
            </Grid.RenderTransform>

            <StackPanel Orientation="Horizontal"
                        Margin="-350,250,-255,-250">

                <StackPanel>
                    <Border Width="600"
                            Height="35"
                            Background="#11691A"
                            Margin="0,0,0,15"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#D0DDD7"
                            Margin="100,0,0,15"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#555862"
                            Margin="150,0,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#11691A"
                            Margin="0,15,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#D0DDD7"
                            Margin="75,15,0,0"
                            CornerRadius="20"/>
                    
                </StackPanel>

                <StackPanel>
                    <Border Width="280"
                            Height="35"
                            Background="#11691A"
                            Margin="0,0,0,15"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#D0DDD7"
                            Margin="100,0,0,15"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#555862"
                            Margin="150,0,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#11691A"
                            Margin="0,15,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#D0DDD7"
                            Margin="75,15,0,0"
                            CornerRadius="20"/>
                </StackPanel>

            </StackPanel>
            
            
        </Grid>
        
    </Grid>
</Window>
